<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="description" content="">
		<meta name="keywords" content="">
		<meta name="author" content="Jiri Velek">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ page_title }}</title>
		<link href="{{ base_url }}/view/css/bootstrap.min.css" rel="stylesheet">
		<link href="{{ base_url }}/view/css/style.css" rel="stylesheet">
	</head>
	<body>
		<header class="p-3 bg-dark text-white">
			<div class="container">
				<div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
					<a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
						<svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
					</a>

					<ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
						<li>
							<a href="{{ base_url }}/" class="nav-link px-2 text-white">Hlavní sránka</a>
						</li>
						<li>
							<a href="{{ base_url }}/articles" class="nav-link px-2 text-white">Články</a>
						</li>

						{% if user.logged %}
							<li>
								<a href="{{ base_url }}/new" class="nav-link px-2 text-white">Přidat článek</a>
							</li>
						{% endif %}
					</ul>

					<form accept-charset="UTF-8" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" action="{{ base_url }}/articles" method="GET" id="searchform">
						<input type="search" id="searchbox" name="q" class="form-control form-control-dark" placeholder="Vyhledat článek..." aria-label="Vyhledat" value="{{ search_value }}">
					</form>

					{% if not user.logged %}

						<div class="text-end">
							<a href="{{ base_url }}/login">
								<button type="button" class="btn btn-outline-light me-2">Přihlášení</button>
							</a>
							<a href="{{ base_url }}/register">
								<button type="button" class="btn btn-warning">Registrace</button>
							</a>
						</div>

					{% else %}

						{% if user.role >= 2 %}

							<div class="text-end">
								<a href="{{ base_url }}/admin">
									<button type="button" class="btn btn-outline-light me-2">Administrace</button>
								</a>
							</div>

						{% endif %}

						<div class="text-end">
							<a href="{{ base_url }}/profile">
								<button type="button" class="btn btn-outline-light me-2">Profil</button>
							</a>
						</div>

						<div class="text-end">
							<a href="{{ base_url }}/logout">
								<button type="button" class="btn btn-outline-light me-2">Odhlásit</button>
							</a>
						</div>

					{% endif %}

				</div>
			</div>
		</header>
	</body>
</html>
