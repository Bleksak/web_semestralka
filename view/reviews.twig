{% include "header.twig" %}

<div class="container pt-5">

	{% if not reviews %}

	<div class="p-5 mb-4 bg-light rounded-3">
		<div class="container-fluid py-5">
			<h1 class="display-5 fw-bold">Článek nemá žádné recenze</h1>
			<button onclick="window.history.back()" class="btn btn-primary btn-lg" type="button">Jít zpět</button>
		</div>
	</div>

	{% else %}

		{% for review in reviews %}

			<article class="blog-post">
				<h2 class="blog-post-title">
					<a href="{{ base_url }}/profile/{{ review.author.id }}">{{ review.author.firstname }}
						{{ review.author.lastname }}</a>
					napsal:</h2>
				<p>{{ review.text }}</p>
			</article>
		{% endfor %}

	{% endif %}
</div>

{% include "footer.twig" %}
